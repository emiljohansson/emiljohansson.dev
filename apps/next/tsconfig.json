{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": false,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"strictNullChecks": true
	},
	"include": [
		"*.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}
